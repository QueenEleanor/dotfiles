# Global properties
separator=true
separator_block_width=15

[volume]
label=
command=echo -n " " && pamixer --get-volume-human
interval=repeat

[memory]
command=free -h | grep -Evi "total(\s+)used(\s+)free" | awk '{ print $1" ("$3"/"$2")"}' | tr "\n" " " && echo -ne "\n"
interval=1

[date]
label=
command=date "+ %Y-%0m-%0d"
interval=60

[time]
label=
command=date "+ %H:%M:%S"
interval=1


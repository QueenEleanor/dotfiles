# Global properties
separator=true
separator_block_width=15

[volume]
command=echo "Volume: $(pamixer --get-volume-human)"
interval=repeat

[memory]
command=free -h | grep -Evi "total(\s+)used(\s+)free" | awk '{ print $1" ("$3"/"$2")"}' | tr "\n" " " && echo -ne "\n"
interval=1

[datetime]
command=date "+%Y-%0m-%0d %H:%M:%S"
interval=1


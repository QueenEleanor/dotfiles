#!/bin/python3
import sys
import os


def main():
    if len(sys.argv) < 2:
        print(f"Usage: loc <file> [<files>]")
        sys.exit(-1)
    
    files = sys.argv[1:]
    for file in files:
        if not os.path.exists(file):
            print(f"{file}: Does not exist.")
            continue

        loc = 0
        with open(file, "r") as f:
            for line in f:
                if line != "\n":
                    loc += 1
        print(f"{file}: {loc}")


if __name__ == "__main__":
    main()

#!/bin/python3
import sys
import os


def main():
    if len(sys.argv) != 2:
        print(f"Usage: loc <file>")
        sys.exit(-1)

    if not os.path.exists(sys.argv[1]):
        print(f"{sys.argv[1]: Not found}")
        sys.exit(-1)

    loc = 0
    with open(sys.argv[1], "r") as f:
        for line in f:
            if line != "\n":
                loc += 1
    print(loc)


if __name__ == "__main__":
    main()
